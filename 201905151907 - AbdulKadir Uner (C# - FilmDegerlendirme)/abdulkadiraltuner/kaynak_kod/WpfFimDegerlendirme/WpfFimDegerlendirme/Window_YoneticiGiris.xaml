        <TextBox x:Name="txtSifre" HorizontalAlignment="Left" Height="23" Margin="94,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173"/>
        <Button x:Name="btnGirisYap" Content="Giriş Yap" HorizontalAlignment="Left" Height="33" Margin="147,147,0,0" VerticalAlignment="Top" Width="120" Click="btnGirisYap_Click"/>

    </Grid>
